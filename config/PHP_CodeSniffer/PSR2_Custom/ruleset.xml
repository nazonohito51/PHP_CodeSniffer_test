<?xml version="1.0"?>
<ruleset name="PSR2_Custom">
    <description>The MyStandard based on PSR2 coding standard.</description>

    <rule ref="PSR2">
        <!-- 文字コードはBOM無しのUTF-8でなければならない -->
        <exclude name="Generic.Files.ByteOrderMark"/>

        <!-- シンボル（Classes, Functions, Constants）の定義を行うファイル内で副作用のある処理を記述するべきではない -->
        <!-- 副作用の例：requireあるいはincludeの実行、出力の生成など -->
        <exclude name="PSR1.Files.SideEffects"/>

        <!-- Classはそれぞれ単独でファイルに存在しなくてはならない -->
        <!-- Classは最低1レベル以上の名前空間に所属していなければならない -->
        <exclude name="PSR1.Classes.ClassDeclaration"/>

        <!-- Classのプロパティは必ずアクセス修飾子を記述しなければならない -->
        <!-- Classのプロパティはvarを使ってはならない -->
        <!-- Classのプロパティは1行に１つまでしか記述してはならない -->
        <!-- Classのプロパティは接頭に'_'をつけるべきではない -->
        <exclude name="PSR2.Classes.PropertyDeclaration"/>

        <!-- Methodは必ずアクセス修飾子を記述しなければならない -->
        <exclude name="Squiz.Scope.MethodScope"/>
    </rule>
</ruleset>
